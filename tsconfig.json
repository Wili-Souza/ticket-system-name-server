{
  "compilerOptions": {
    "target": "es2017",
    "module": "node16",
    "lib": ["es2017"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules/*"],
  "include": ["src"]
}
